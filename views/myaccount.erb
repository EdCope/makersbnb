  <div>
    <section class="section">
      <label class="label is-size-5 has-text-grey">Bookings that you have requested</label>
    </section>
  </div>
  
    <div>
      <div class="field-body">
          <label class="field is-size-5 has-text-grey">
            <%if !@requests.nil? %>
            <ul>
            <% @requests.each do |request| %>
              <li><%= request['requested_date']%></li>
              <br>
              <br>
            <% end %>
            </ul>
            <%end%>
          </label>
          </div>
      </div>
