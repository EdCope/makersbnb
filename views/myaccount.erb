  <div>
    <section class="section">
      <form action="/add_rental">
        <button class="button is-primary" type="submit" value="List a property">List a property</button>  
      </form>
    </section>
  </div>

  <div>
    <section class="section">
      <label class="label is-size-5 has-text-grey">Received booking requests</label>
    </section>
  </div>
