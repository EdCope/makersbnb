<form action="/add_rental" method="post">
  Property name:
  <input type="text" name="title"/>
  <br>
  Description:
  <input type="text" name="rental_description"/>
  <br>
  Price per night:
  <input type="number" min="0.00" max="10000000.00" step="0.01" name="price"/>
  <br>
  Contact email:
  <input type="email" name="contact_details"/>
  <br>
  <input type="submit" value="Submit"/>
</form>