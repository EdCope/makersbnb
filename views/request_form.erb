<!DOCTYPE html>
<html>
  <body>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
  </head>

<nav class="navbar has-background-black-bis" role="navigation">

  <div id="makersbnb_navbar" class="navbar-menu">
    <div class="navbar-start">
      <div class="level-item has-text-centered">
        <div>
          <figure class="image is-128x128"><img src='/images/Makers_logo.png'></figure>
        </div>
      </div>
      <div class="level-item has-text-centered">
        <div>
          <h1 class="title is-1 has-text-white">MakersBnB</h1>
        </div>
      </div>
    </div>
    <div class="level-item has-text-centered">
        <form action='/'>
        <button class="button is-black is-medium">Home</button>
        </form>
        </div>
  </div>
  </div>
  
</nav>
<div>
<section class="section">

<div class="field is-horizontal is-size-5">
  <div class="field-label">
    <label class="label has-text-grey">Property name:</label>
  </div>
  <div class="field-body">
    <div class="field">
      <%= @selected_rental.title %>
    </div>
  </div>
</div>
<div class="field is-horizontal is-size-5">
  <div class="field-label">
    <label class="label has-text-grey">Description:</label>
  </div>
  <div class="field-body">
    <div class="field">
      <%= @selected_rental.rental_description %>
    </div>
  </div>
</div> 
<div class="field is-horizontal is-size-5">
  <div class="field-label">
    <label class="label has-text-grey">Price:</label>
  </div>
  <div class="field-body">
    <div class="field">
      <%= @selected_rental.price %>
    </div>
  </div>
</div>  
<div class="field is-horizontal is-size-5">
  <div class="field-label">
    <label class="label has-text-grey">Contact details:</label>
  </div>
  <div class="field-body">
    <div class="field">
      <%= @selected_rental.contact_details %>
    </div>
  </div>
</div>
<div class="field is-horizontal is-size-5">
  <div class="field-label">
    <label class="label has-text-grey">Availability Start Date:</label>
  </div>
  <div class="field-body">
    <div class="field">
      <%= @selected_rental.rental_start_date.split("-").reverse.join("-") %>
    </div>
  </div>
</div>
<div class="field is-horizontal is-size-5">
  <div class="field-label">
    <label class="label has-text-grey">Availability End Date:</label>
  </div>
  <div class="field-body">
    <div class="field">
      <%= @selected_rental.rental_end_date.split("-").reverse.join("-") %>
    </div>
  </div>
</div>

<form action="/request" method="post">
<div class="field is-horizontal is-size-5">
  <div class="field-label">
    <label class="label has-text-grey">Select date:</label>
  </div>
  <div class="field-body">
    <div class="field">
      <input type="date" name="requested_date">
      <input type="hidden" name="rental_id" value="<%= @selected_rental.id %>">
      <input type="hidden" name="owner_id" value="<%= @selected_rental.owner_id %>">
      <br><br>
      <button class="button is-primary" value="Submit">Submit</button>
    </div>
  </div>
</form>

</section>
</div>
</body>
</html>